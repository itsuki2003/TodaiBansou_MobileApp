{
  "expo": {
    "name": "東大伴走",
    "slug": "todai-banso",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-square.png",
    "scheme": "todaibanso",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-square.png",
        "backgroundColor": "#2563EB"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.todaibanso.app",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
